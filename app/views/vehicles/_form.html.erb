<%= form_for [ @family, @vehicle ] do |f| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explination">

      <h2><%= pluralize( @family.errors.count, "error" ) %>
      prohibited this vehicle from being saved:</h2>

      <ul>

      <% @vehicle.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>

      </ul>

    </div>
  <% end %>

  <p>
    <%= f.label :year, "Year"  %><br>
    <%= f.text_field :year %>
  </p>

  <p>
    <%= f.label :make %><br>
    <%= f.text_field :make %>
  </p>

  <p>
    <%= f.label :model %><br>
    <%= f.text_field :model %>
  </p>

  <p>
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </p>

  <p>
    <%= f.label :license %><br>
    <%= f.text_field :license %>
  </p>

  <p>
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </p>

  <%= f.submit "Save Vehicle" %>

<% end %>
