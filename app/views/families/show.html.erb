<h2><%= @family.name %> Family Information</h2>

<br>

<h3>Email Address</h3>
<p> <%= @family.email %> </p>

<table>
</tbody>
<tr>
<td>
<table class='table' id='students'>
  <thead>
    <tr>
      <th>Students</th>
    </tr>
  </thead>
  <tbody>
    <% @family.students.each do |student| %>
      <tr>
        <td><%= link_to student.first_name, [ @family, student ]  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</td>
</tr>
<tr>
<td>
<table class='table' id='parents'>
  <thead>
    <tr>
      <th>Parents</th>
    </tr>
  </thead>
  <tbody>
    <% @family.parents.each do |parent| %>
      <tr>
        <td><%= link_to parent.first_name, [ @family, parent ] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</td>
</tr>
<tr>
<td>
<table class='table' id='vehicles'>
  <thead>
    <tr>
      <th>Vehicles</th>
    </tr>
  </thead>
  <tbody>
    <% @family.vehicles.each do |vehicle| %>
      <tr>
        <td><%= link_to vehicle.model, [ @family, vehicle ] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</td>
</tr>
</tbody>
</table>

<table class='table'>
  <tbody>
    <tr><td><%= link_to 'Edit Family', edit_family_path( @family ) %></td></tr>  
    <tr><td><%= link_to 'Delete Family', family_path( @family ), 
                                   method: :delete, 
                                   data:{ confirm: "Are you sure you want to delete this family?" } %></td></tr>
    <tr><td><%= link_to 'Add New Student', new_family_student_path( @family ) %></td></tr>
    <tr><td><%= link_to 'Add New Parent', new_family_parent_path( @family ) %></td></tr>
    <tr><td><%= link_to 'Add New Vehicle', new_family_vehicle_path( @family ) %></td></tr>
  </tbody>
</table>