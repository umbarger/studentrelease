<%- model_class = Family -%>
<div class="page-header">
  <h1><%=t '.title', :default => "#{@family.name.titleize} #{model_class.model_name.human.titleize}" %></h1>
</div>

<dl>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @family.email %></dd>
</dl>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Students</th>
    </tr>
  </thead>
  <tbody>
    <% @family.students.each do |student| %>
      <tr>
        <td><%= link_to student.first_name, [ @family, student ]  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Parents</th>
    </tr>
  </thead>
  <tbody>
    <% @family.parents.each do |parent| %>
      <tr>
        <td><%= link_to parent.first_name, [ @family, parent ] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Vehicles</th>
    </tr>
  </thead>
  <tbody>
    <% @family.vehicles.each do |vehicle| %>
      <tr>
        <td><%= link_to vehicle.model, [ @family, vehicle ] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.back', :default => t("helpers.links.back")),
              families_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_family_path(@family), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              family_path(@family),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
