<%= simple_form_for @teacher, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :email %>
  <%= error_span(@teacher[:email]) %>
  <%= error_span(@teacher[:unconfirmed_email]) %>
  <%= f.input :first_name %>
  <%= error_span(@teacher[:first_name]) %>
  <%= f.input :last_name %>
  <%= error_span(@teacher[:last_name]) %>
  <%= f.input :classroom %>
  <%= error_span(@teacher[:classroom]) %>
  <%= f.input :grade %>
  <%= error_span(@teacher[:grade]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                teachers_path, :class => 'btn btn-default' %>
<% end %>
