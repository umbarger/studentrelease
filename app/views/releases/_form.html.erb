<%= form_for [@family,@release], :html => { :class => "form-horizontal release" } do |f| %>

    <% if @release.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@release.errors.count, "error") %> prohibited this release from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @release.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <div class="control-group">
    <%= f.label :student_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select( :release, :student_id, Student.active, :id, :last_name ) %>
    </div>
    <%= error_span(@release[:student_id]) %>
  </div>
    <div class="control-group">
    <%= f.label :teacher_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select( :release, :teacher_id, Teacher.active, :id, :last_name ) %>
    </div>
    <%= error_span(@release[:release]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            releases_path, :class => 'btn btn-default' %>

<% end %>
